<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/basic"
    android:orientation="vertical"
    tools:context="com.example.android.musicalui.Favorites">

    <LinearLayout
        style="@style/basic1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120">

            <TextView
                android:id="@+id/exp_favorites"
                style="@style/notes"
                android:text="@string/favorites_note"
              />
        </ScrollView>

        <RelativeLayout
            android:id="@+id/fav_radios"
            style="@style/basic1"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/star"
                style="@style/star_img" />

            <TextView
                android:id="@+id/no_favs"
                android:text="No Favorites"
                android:layout_below="@+id/star"
                style="@style/notification"
                 />

            <TextView
                android:id="@+id/select_favs"
                android:layout_below="@+id/no_favs"
                android:text="@string/select_favs"
                style="@style/instructions"

                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
